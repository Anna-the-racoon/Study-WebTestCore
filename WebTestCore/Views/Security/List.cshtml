@model WebTestCore.Models.Security.SecurityListVm

@{
    ViewBag.Title = "Result";

}
@using (Html.BeginForm("Result", "Security", FormMethod.Get))
{
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <button type="submit" class="btn btn-light mb-3" name="Submit"
                                asp-action="Index" asp-controller="Home">
                            Back
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container bg-white box-shadow mb-3">
        <table class="table table-striped">
            <thead class="table-light">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Login
                    </th>
                    <th>
                        Password
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.SecurityList)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Login
                        </td>
                        <td>
                            @item.Password
                        </td>
                        <td>
                            <a class="nav-link text-warning" asp-route-area="" asp-controller="Security" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="nav-link text-danger" asp-route-area="" asp-controller="Security" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}